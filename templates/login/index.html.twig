{% extends 'base.html.twig' %}

{% block title %}Emma√ºs Connect | espace personnel
{% endblock %}

{% block body %}
	<section class="container d-flex justify-content-center">
		<div class="col form-row fw-bold">	
			{% if error %}
				<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<h1 class="fw-bold text-uppercase d-flex mb-2 h3 mt-5 text-light">Login</h1>

			<form action="{{ path('app_login') }}" method="post">
				<div class="d-flex flex-column">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<label class="form-label fw-bold text-light text-uppercase h5" for="username">Email</label>
					<div class="input-group w-100 w-md-50">
						<span class="input-group-text bg-primary"></span>
						<input type="text" placeholder="exemple@exemple.com" class="form-control" id="username" name="_username" value="{{ last_username }}">
					</div>

					<label class="fw-bold form-label text-light text-uppercase mt-3 h5" for="password">Mot de passe</label>
					<div class="input-group w-100 w-md-50">
						<span class="input-group-text bg-primary"></span>
						<input type="password" placeholder="Mot de passe" class="form-control" id="password" name="_password">
					</div>

					<input type="hidden" name="_target_path" value="app_home">
					<div class="d-flex justify-content-end">
						<button class="w-50 mt-4 btn btn-primary fw-bold text-uppercase" type="submit">Valider</button>
					</div>
				</div>
			</form>
		</div>
	</section>
{% endblock %}
